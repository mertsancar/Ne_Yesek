WindowManager:
    MainWindow:
	SecondWindow:


<MainWindow>:
	name : "main"


	
	FloatLayout:
		cols :1
		
		Label:
			text: "NE YESEK?"
			font_size: 50
			color: (253/255, 165/255, 48/255, 1)
			

		Button:
			pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
			text: "Baþla!"
			color: (253/255, 165/255, 48/255, 1)
			background_color: (171/255, 0, 18/255,1)

			
			on_release:
				app.root.current = "second"
				root.manager.transition.direction = "left"
				
			

